<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSharpMobileComponents.App" 
             xmlns:Converters="clr-namespace:CSharpMobileComponents.Resources.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
              
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
           
                <ResourceDictionary>
                    <Converters:TranslationConverter x:Key="TranslationConverter"/>
                    <Converters:ColorConverter x:Key="ColorConverter"/>
                    <Converters:SizesConverter x:Key="SizesConverter"/>
                    <Converters:ThicknessConverter x:Key="ThicknessConverter"/>
                    <Converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>